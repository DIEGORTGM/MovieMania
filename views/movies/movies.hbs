<h1>Search for a movie!</h1>


<div>
    <form class="form-inline" action="/movies" method="POST">
        <div class="form-group">
            {{!-- <input type="text" id="inputValue"> --}}
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </div>
    </form>
</div>

<div id="movie-searchable">
    
    <div class="movie">
        <section class="section">
    
        </section>
    
    </div>
</div>

<br>

<h2>Movies:</h2>

<div class="d-flex flex-column">
{{#each movies}}
<div class="d-flex flex-column font-weight-bold">{{title}}</div>
<div class="d-flex flex-column">{{director}}</div>
<div class="d-flex flex-column">{{cast}}</div>
<a href="/movies/{{_id}}" class="btn btn-sm btn-success ">See details</a>
{{/each}}
</div>

