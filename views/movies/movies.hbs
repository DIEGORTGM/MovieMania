<br>

<h2>Movies:</h2>

<div class="d-flex flex-column">
{{#each movies}}
<div class="d-flex flex-column font-weight-bold">{{title}}</div>
<div class="d-flex flex-column">{{director}}</div>
<div class="d-flex flex-column">{{cast}}</div>
<a href="/movies/{{_id}}" class="btn btn-sm btn-success ">See details</a>
{{/each}}
