<div class="row justify-content-center">
    <div class="col-md-6">

        <h2>Welcome, {{username}}!</h2>
        <br>
        <br>
        <h2>Your favorite movies:</h2>
        {{#each user.favourites}}
        {{/each}}
    </div>
</div>

<br>

<h2>Edit Profile</h2>

<form action="/profile/editar/{{_id}}" method="POST">
    <label for="">Username:</label>
    <input type="text" name="name" value={{name}}><br>
    <label for="">Email:</label>
    <input type="text" name="email" value={{email}}><br>
    {{!-- <label for="">Favorites:</label>
    <input type="text" name="favorites" value={{favorites}}><br> --}}

    <button type="submit" class="btn btn-sm btn-success ">Edit profile</button>
</form>

<br>

<section>
    <h2>Upload Image </h2>
    <form action="/profile/imagen" method="post" enctype="multipart/form-data">
        {{!-- <input type="text" name="imageName" placeholder="Nombre de imagen"><br><br> --}}
        <input type="file" name="imageFile"><br><br>
        <input type="submit" value="Upload" class="btn btn-sm btn-success ">
    </form>
</section>